{
  "compilerOptions": {
    "downlevelIteration": true,
    "lib": ["es2018"],
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noImplicitReturns": true,
    "preserveSymlinks": true,
    "removeComments": true,
    "sourceMap": false,
    "strict": true,
    "target": "es2018",
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["build", "node_modules"]
}
